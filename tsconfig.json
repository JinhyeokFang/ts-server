{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "sourceMap": true,
    "target": "es6",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "rootDir": "./src",
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "declaration": true,
  },
  "exclude": [
    "./**/*.test.ts",
    "./**/*.example.ts"
  ]
}